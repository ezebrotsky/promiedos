{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Resource": ["*"],
      "Action": [
        "ecr:GetAuthorizationToken",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload",
        "ecr:BatchCheckLayerAvailability",
        "ecr:PutImage",
        "ecs:RunTask",
        "iam:PassRole",
        "lambda:UpdateFunctionCode"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:GetObjectVersion", "s3:GetBucketVersioning", "s3:List*", "s3:PutObject"],
      "Resource": ["${aws_s3_bucket_arn}", "${aws_s3_bucket_arn}/*", "${lambda_bucket_arn}", "${lambda_bucket_arn}/*"]
    }
  ]
}
